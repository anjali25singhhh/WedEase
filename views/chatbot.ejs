        cursor: pointer;
    }

    .chatbot-question {
        background-color: #f0f0f0;
        padding: 8px;
        margin-bottom: 5px;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
    }

    .chatbot-question:hover {
        background-color: #e0e0e0;
    }

    .chatbot-answer {
        background-color: #e0f7fa;
        padding: 8px;
        margin-top: 5px;
        border-radius: 4px;
    }
</style>
