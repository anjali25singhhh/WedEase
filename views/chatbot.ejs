    .chatbot-container {
        width: 90%;
        max-width: 500px;
        margin: 20px auto;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .chatbot-header {
        background-color: #5c67f2;
        color: #fff;
        text-align: center;
        padding: 10px;
        font-size: 18px;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .chatbot-body {
        padding: 15px;
        height: 300px;
        overflow-y: auto;
        border-bottom: 1px solid #ddd;
    }

    .chatbot-footer {
        display: flex;
        justify-content: space-between;
